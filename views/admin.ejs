        margin-left: 20px;
       color: white;
    }
    ul li a:hover{
        background-color:crimson;
        border-radius: 16px; 
    }
        
   
</style>
<body>
    <nav class="navbar navbar-expand-lg bg-danger p-0 m-0">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">
            <div class="main-heading">
                <p class="h2 display-7"> Admin Pannel</p> 
                <!-- <p class="p1">YOUR INDIPENDENT GUIDE TO THE BEST SHOWS IN KENYA</p> -->
              </div>
          </a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="#">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#event">New Events</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#adv">Adverts</a>
              </li>
            </ul>
          </div>
          <div class="date">
            <div class="btn-group">
              <button type="button" class="btn btn-danger dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                SELECT A DATE
              </button>
              <ul class="dropdown-menu">
                <input type="date">
            
              </ul>
            </div>

        </div>
        </div>
       
      </nav>
    
    
    <section id="admin">
        <div class="container-lg ">
          
            <div class="row justify-content-center my-5 "  >
                <div class="col-lg-6" id="event">
                    <div class="">
                        <h2 class="display-5 text-danger">Adding of new events</h2>
                    </div>
                    <form action="/event" method="POST">
                        <label for="text" class="form-label" >Title of the event:</label>
                        <div class="input-group mb 4">
                            <span class="input-group-text">
                                <i class="bi bi-envelope-fill"></i>
                            </span>
                            <input name="title" type="text" class="form-control" id="email" placeholder="Sauti sol concert">
                        </div>
                        
                        <label for="name" class="form-label" >Poster</label>
                        <div class="input-group mb-4">
                            <span class="input-group-text">
                                <i class="bi bi-file-image"></i>
                            </span>
                            <input name="image" id="file" type="file" accept="image//*" capture="camera">
                        </div>
                        
                        <label for="subject"  class="form-label">Type of event :</label>
                        <div class="input-group mb-4">
                            <span class="input-group-text">
                                <i class="bi bi-chat-left-dots-fill"></i>
                            </span>
                            <select id="subjects" class="form-select">
                                <option name="event" value="Pricing" selected>Stand up</option>
                                <option  name="event" value="Content">Concerts</option>
                                <option  name="event" value="Other">Musicals</option>
                                <option name="event" value="Other">Concerts</option>
                                <option name="event" value="Other">Podcats</option>
                            </select>
                        </div>
                        <label for="name" class="form-label" >Venue</label>
                        <div class="input-group mb-4">
                            <span class="input-group-text">
                                <i class="bi bi-person-fill"></i>
                            </span>
                            <input  name="venue"type="picture" class="form-control" id="name" placeholder="e.g Carnivore , kenya cinema">
                        </div>
                        <label for="date" class="form-label" >Date</label>
                        <div class="input-group mb-4">
                            <span class="input-group-text">
                                <i class="bi bi-person-fill"></i>
                            </span>
                            <input  name="date" type="date" class="form-control" id="name" placeholder="poster">
                        </div>
                        <label for="name" class="form-label" >Price</label>
                        <div class="input-group mb-4">
                            <span class="input-group-text">
                                <i class="bi bi-person-fill"></i>
                            </span>
                            <input  name="price" type="number" class="form-control" id="name" placeholder="e.g 2500 ksh">
                        </div>
                      
                        <div class="form-floating mb-5 mt-5">
                            <textarea name="descrip" id="question" style="height: 70px;" class="form-control"></textarea>
                            <label for="query" >Description</label>
                        </div>
                        <div class="mb-4 text-center">
                            <button class="btn btn-outline-success btn-lg">Submit</button>
                        </div>
                        
                        
                        
                </div>
               
              
            </div>
            
            </div>
           
        </section>
      
     
        <script>
         const p= document.getElementById('poo');
         import Ember from 'ember';

        export default Ember.Controller.extend({
        actions: {
        reset: function(){
       Ember.$('#file').wrap('<form>').closest('form').get(0).reset();
       Ember.$('#file').unwrap();
    }
  }
});
         </script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>        
</body>
