      <div class="text-center">
        <h1 class="text-danger display-5">Upcoming Events</h1>
       <p class="lead text-muted">The following events will occour as from this weekend see you soon...</p>
  </div>
  <!-- dynamic data -->
     
                <%  if(result.length>0){ %>
                  <%  result.forEach(resu=>{ %>
                    <div class="row my-3 align-items-center justify-content-center g-3 ms-2">
                      <div class="col-8 col-lg-4 col-xl-3">
                          <div class="card">
                              <div class="card-body text-center py-3 ">
                  <h4 class="card-tittle display-9 fw-bold text-success" ><%- resu.type %></h4>
                   <p class="lead subtittle display-9 fw-bold text-success"><%- resu.title %></p>
                   <p class="lead subtittle display-9">Location:<%- resu.venue %></p>
                   <p class=" fw-bold text-danger"><%- resu.date %></p>
                   <p class="display-9 fw-bold text-success">Ksh=/<%- resu.price %></p>
                   <div class="accordion accordion-flush" id="accordionFlushExample">
                    <div class="accordion-item">
                      <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                          More Info
                        </button>
                      </h2>
                      <div id="flush-collapseOne" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
                        <div class="accordion-body"><%- resu.descrip %></div>
                      </div>
                    </div>
                  <a href="#" class="btn btn-outline-success btn-lg mt-3">Get your ticket</a>
                </div>
                
              </div>
          </div>
          </div>
